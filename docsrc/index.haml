!!!5
%html
  %head
    %style
      != css
  %body

    %header#if-top
      %strong= project.name
      %span documentation

    #if-content
      - blocks.each do |b|
        %section{id: b.id, class: "if-section if-level-#{b.level} if-type-#{b.main_type}"}

          - if b.level == 3
            %h3.if-headings
              - b.headings.each do |heading|
                = heading
                %br

          = b.html

    #if-index
      %h1 Index
      - blocks.each do |b|
        - b.headings.each do |h|
          %a{href: "##{b.id}", class: "if-level-#{b.level}"}= h
